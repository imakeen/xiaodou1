<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNo"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp220"
            android:scaleType="centerCrop"
            android:src="@mipmap/mines" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp164"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/write_5"
                android:orientation="horizontal"
                android:padding="@dimen/dp20">

                <ImageView
                    android:layout_width="@dimen/dp64"
                    android:layout_height="@dimen/dp64"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/logo" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_weight="1"
                        android:text="用户名"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp18"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/huiyuan"
                        android:drawablePadding="@dimen/dp4"
                        android:gravity="center_vertical"
                        android:text="高级会员"
                        android:textColor="@color/colororange"
                        android:textSize="@dimen/sp12"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/go_orange"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp20"
                android:background="@drawable/write_5"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/my_integral"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp16"
                        android:paddingBottom="@dimen/dp16">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/jifen"
                            android:drawablePadding="@dimen/dp10"
                            android:drawableTint="@color/colororange"
                            android:text="我的积分"
                            android:textColor="@color/colorblack3"
                            android:textSize="@dimen/sp14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="@color/collolblue"
                            android:textSize="@dimen/sp14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp10"
                            android:src="@mipmap/go_orange" />
                    </LinearLayout>

                    <include layout="@layout/view_item" />

                    <LinearLayout
                        android:id="@+id/my_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp16"
                        android:paddingBottom="@dimen/dp16">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/youhui"
                            android:drawablePadding="@dimen/dp10"
                            android:text="我的优惠券"
                            android:textColor="@color/colorblack3"
                            android:textSize="@dimen/sp14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:src="@mipmap/go_orange" />
                    </LinearLayout>

                    <include layout="@layout/view_item" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/dp16"
                        android:paddingBottom="@dimen/dp16">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/shangcheng"
                            android:drawablePadding="@dimen/dp10"
                            android:text="优惠券商城"
                            android:textColor="@color/colorblack3"
                            android:textSize="@dimen/sp14" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:src="@mipmap/go_orange" />
                    </LinearLayout>

                    <include layout="@layout/view_item" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lianxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp16"
                    android:paddingBottom="@dimen/dp16">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/lianxi"
                        android:drawablePadding="@dimen/dp10"
                        android:text="联系我们"
                        android:textColor="@color/colororange"
                        android:textSize="@dimen/sp16" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:src="@mipmap/go_orange" />
                </LinearLayout>

                <include layout="@layout/view_item" />

                <LinearLayout
                    android:id="@+id/my_opinion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp16"
                    android:paddingBottom="@dimen/dp16">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/yijian"
                        android:drawablePadding="@dimen/dp10"

                        android:text="意见反馈"
                        android:textColor="@color/colororange"
                        android:textSize="@dimen/sp16" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:src="@mipmap/go_orange" />
                </LinearLayout>

                <include layout="@layout/view_item" />

                <LinearLayout
                    android:id="@+id/ll_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp16"
                    android:paddingBottom="@dimen/dp16">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/guanyu"
                        android:drawablePadding="@dimen/dp10"
                        android:text="关于我们"
                        android:textColor="@color/colororange"
                        android:textSize="@dimen/sp16" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:src="@mipmap/go_orange" />
                </LinearLayout>

                <include layout="@layout/view_item" />

                <LinearLayout
                    android:id="@+id/ll_jiameng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp16"
                    android:paddingBottom="@dimen/dp16">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@mipmap/jiameng"
                        android:drawablePadding="@dimen/dp10"
                        android:text="加盟小豆"
                        android:textColor="@color/colororange"
                        android:textSize="@dimen/sp16" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:src="@mipmap/go_orange" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>