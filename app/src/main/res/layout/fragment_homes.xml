<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/colororange">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="小豆租车"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorNo">


        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/Imge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp210"
            android:background="@mipmap/banner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginTop="@dimen/dp190"
            android:layout_marginRight="@dimen/dp20"
            android:background="@drawable/shape_corner_down"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp30"
            android:paddingBottom="@dimen/dp30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp30"
                tools:ignore="RtlSymmetry">

                <ImageView
                    android:id="@+id/Rounded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:src="@mipmap/rounded"
                    android:tint="@color/colororange" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取还城市"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/Maps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp14"
                        android:ellipsize="end"
                        android:maxEms="4"
                        android:maxLines="1"
                        android:text="请选择"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp30"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Pick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取还地点"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:id="@+id/Mapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp14"
                        android:ellipsize="end"
                        android:maxEms="6"
                        android:maxLines="1"
                        android:text="请选择"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp15"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/Views"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp15"
                android:layout_marginRight="@dimen/dp10"
                android:background=" #CCCCCC " />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp25"
                android:orientation="horizontal"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:id="@+id/ll_qu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp20"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Ri_Qu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="输入取车时间"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Zhou_ri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:text="19:20"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Tian_Shu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共2天"
                        android:textColor="@color/colororange"
                        android:textSize="@dimen/sp16" />

                    <View
                        android:layout_width="@dimen/dp61"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@color/colororange" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_huan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/Ri_qi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="输入还车时间"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Zhao_ris"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:text="19:20"
                        android:textSize="@dimen/sp12" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/Lease_immediately"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/course_details_checked"
                android:paddingTop="@dimen/dp14"
                android:paddingBottom="@dimen/dp14"
                android:text="去选车"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/sp15"
                android:textStyle="bold" />
        </LinearLayout>

        <com.amap.api.maps2d.MapView
            android:id="@+id/mapty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>